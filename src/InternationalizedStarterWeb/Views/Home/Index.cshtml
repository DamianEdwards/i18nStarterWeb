@{
    ViewBag.Title = LocString["Hello there!!"];
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="@Url.Content(LocString["~/images/ASP-NET-Banners-01.png"])" alt="ASP.NET" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <p>
                        @LocString["Learn how to build ASP.NET apps that can run anywhere."]
                        <a class="btn btn-default btn-default" href="http://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            @LocString["Learn More"]
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="@Url.Content(LocString["~/images/Banner-02-VS.png"])" alt="Visual Studio" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <p>
                        @LocString["There are powerful new features in Visual Studio for building modern web apps."]
                        <a class="btn btn-default btn-default" href="http://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                            @LocString["Learn More"]
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="@Url.Content(LocString["~/images/ASP-NET-Banners-02.png"])" alt="Package Management" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <p>
                        @LocString["Bring in libraries from NuGet, Bower, and npm, and automate tasks using Grunt or Gulp."]
                        <a class="btn btn-default btn-default" href="http://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                            @LocString["Learn More"]
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="@Url.Content(LocString["~/images/Banner-01-Azure.png"])" alt="Microsoft Azure" class="img-responsive">
            <div class="container">
                <div class="carousel-caption">
                    <p>
                        @LocString["Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps."]
                        <a class="btn btn-default btn-default" href="http://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                            @LocString["Learn More"]
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>@LocString["This application consists of:"]</h2>
        <ul>
            <li>@LocString["Sample pages showing basic nav"]</li>
            <li>@LocString.Html("Theming using <a href=\"http://go.microsoft.com/fwlink/?LinkID=398939\">Bootstrap</a>")</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>@LocString["Customize app"]</h2>
        <ul>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=398600">@LocString["Add Controllers and Views"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=398602">@LocString["Add Data using EntityFramework"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=398603">@LocString["Add Authentication using Identity"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=398606">@LocString["Add real time support using SignalR"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=398604">@LocString["Add Class library"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=517848">@LocString["Add client packages using Bower"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=517849">@LocString["Manage client packages using Grunt"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=517850">@LocString["Develop on different platforms"]</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>@LocString["Run & Deploy"]</h2>
        <ul>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=517851">@LocString["Run your app locally"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=517852">@LocString["Run your app on ASP.NET Core 5"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=517853">@LocString["Run commands defined in your project.json"]</a></li>
            <li><a href="http://go.microsoft.com/fwlink/?LinkID=398609">@LocString["Publish to Microsoft Azure Web Sites"]</a></li>
        </ul>
    </div>
</div>